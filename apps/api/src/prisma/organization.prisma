enum OrganizationStatus {
  draft
  active
  suspended
}

enum OrganizationType {
  clinic
  center
  private_practice
}

model Organization {
  id          String             @id
  ownerUserId String
  name        String
  type        OrganizationType
  status      OrganizationStatus @default(draft)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  @@index([ownerUserId])
}
